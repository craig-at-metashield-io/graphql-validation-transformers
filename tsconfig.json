{
   "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",      
      "lib": [ "es2018" ],
      "incremental": true,
      "declaration": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "rootDir": "./src",
      "outDir": "./dist"
   },
   "exclude": [
      "node_modules", 
      "dist", 
      "src/__tests__/**/*"      
   ],
   "files": [
      "./src/index.ts"
   ],
   "references": [
      {
         "path": "./packages/common"
      },
      {
         "path": "./packages/string"
      },
      {
         "path": "./packages/number"
      }
   ]
}